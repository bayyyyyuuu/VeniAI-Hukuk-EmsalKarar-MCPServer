{
  "name": "yargitay-mcp-server",
  "private": true,
  "description": "Veni AI-built MCP server for Yargitay precedent search with Browserless and PostgreSQL cache.",
  "author": "Veni AI (https://www.veniplatform.com)",
  "homepage": "https://www.veniplatform.com",
  "license": "MIT",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "yargitay",
    "emsal",
    "precedent",
    "search",
    "browserless",
    "puppeteer",
    "postgres"
  ],
  "scripts": {
    "build": "bun x tsc -p tsconfig.json",
    "start": "bun run dist/index.js",
    "type-check": "bun x tsc -p tsconfig.json --noEmit",
    "knip": "bun x knip",
    "test": "vitest run",
    "lint:md": "remark .",
    "format": "bun x prettier --write .",
    "prepare": "husky"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "cheerio": "^1.0.0-rc.12",
    "pg": "^8.11.5",
    "puppeteer": "^22.4.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/node": "^22.10.5",
    "@types/pg": "^8.10.9",
    "husky": "^9.1.7",
    "knip": "^5.82.1",
    "lint-staged": "^16.2.7",
    "remark-cli": "^12.0.1",
    "remark-preset-lint-recommended": "^7.0.1",
    "typescript": "^5.4.2",
    "vitest": "^4.0.17"
  },
  "lint-staged": {
    "src/**/*.{ts,js,json}": [
      "bun x prettier --write"
    ]
  }
}